<?xml version="1.0"?>
<ruleset name="WooCommerce.com">
	<description>PHP coding standards for Restaurant.</description>

	<rule ref="WordPress-Core">
		<exclude name="WordPress.WP.PreparedSQL"/>
		<exclude name="WordPress.PHP.YodaConditions"/>
	</rule>

	<rule ref="WordPress-Extra">
		<exclude name="Generic.CodeAnalysis.ForLoopWithTestFunctionCall"/>
		<exclude name="Generic.Classes.DuplicateClassName"/>
		<exclude name="Generic.Strings.UnnecessaryStringConcat"/>
		<exclude name="WordPress.XSS.EscapeOutput"/>
		<exclude name="WordPress.CSRF.NonceVerification" />
		<exclude name="WordPress.PHP.DiscouragedFunctions"/>
		<exclude name="WordPress.WP.EnqueuedResources"/>
		<exclude name="WordPress.Variables.GlobalVariables"/>
		<exclude name="WordPress.PHP.StrictComparisons" />
		<exclude name="WordPress.PHP.StrictInArray" />
	</rule>
</ruleset>
